# Medical Chatbot Backend - Environment Variables
# Copy this file to .env and fill in your actual values

# ============ MongoDB Configuration ============
# Get your MongoDB connection string from MongoDB Atlas
# Format: mongodb+srv://username:password@cluster.xxxxx.mongodb.net/dbname
MONGODB_URI=mongodb+srv://your_username:your_password@cluster0.xxxxx.mongodb.net/medical_chatbot?retryWrites=true&w=majority
MONGODB_DB_NAME=medical_chatbot

# ============ JWT Configuration ============
# Generate a strong random secret key (min 32 characters)
# You can use: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-super-secret-jwt-key-at-least-32-characters-long-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============ API Keys (REQUIRED) ============
# Google Gemini API Key - Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Pinecone API Key - Get from: https://www.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key_here

# OpenAI API Key (Optional)
OPENAI_API_KEY=your_openai_api_key_here

# ============ Pinecone Configuration ============
PINECONE_INDEX_NAME=medical-chatbot
PINECONE_DIMENSION=384
PINECONE_METRIC=cosine
PINECONE_CLOUD=aws
PINECONE_REGION=us-east-1

# ============ Embedding Model ============
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# ============ LLM Configuration ============
GEMINI_MODEL=models/gemini-2.5-flash

# ============ Document Processing ============
CHUNK_SIZE=500
CHUNK_OVERLAP=20

# ============ File Upload Configuration ============
UPLOAD_DIR=uploads
MAX_FILE_SIZE_MB=50
ALLOWED_EXTENSIONS=pdf,docx,xlsx,txt,doc,xls

# ============ API Settings ============
APP_NAME=Medical Chatbot API
APP_VERSION=1.0.0
DEBUG=False

# ============ CORS Origins ============
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ============ Server Configuration ============
HOST=0.0.0.0
PORT=8000

# ============ Query Settings ============
TOP_K_RESULTS=3
